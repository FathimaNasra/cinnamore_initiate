generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model Pricing {
  id         Int      @id @default(autoincrement())  // Unique ID for each pricing record
  grade      String   // Cinnamon grade (e.g., "C1", "C2", "C3", etc.)
  unitPrice  Float    // Unit price per kilogram
  createdAt  DateTime @default(now()) // Timestamp when the record was created
  updatedAt  DateTime @updatedAt     // Timestamp when the record was last updated
}
